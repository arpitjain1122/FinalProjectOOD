<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity"
	minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0"
	prefWidth="600.0" styleClass="login_container"
	stylesheets="@../Styles/login.css" xmlns="http://javafx.com/javafx/19"
	xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="application.Controller.LoginController">
   <children>
      <VBox prefHeight="400.0" prefWidth="200.0" styleClass="login_logo_container" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <FontAwesomeIconView glyphName="BANK" size="30" />
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Bank" />
         </children></VBox>
      <VBox layoutX="324.0" layoutY="82.0" prefHeight="350.0" prefWidth="350.0" styleClass="login_form_container" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
         <children>
            <Label id="choice-prompt-text" text="Choose your Account Type :" />
            <ChoiceBox fx:id="acc_selector" prefWidth="150.0" styleClass="account_selector" />
            <Label fx:id="payee_address_lbl" text="Payee Address :" />
            <TextField fx:id="payee_address_fld" styleClass="input_field" />
            <Label text="Password" />
            <PasswordField fx:id="password_fld" styleClass="input_field" />
            <Button fx:id="login_btn" mnemonicParsing="false" text="Login" />
            <Label fx:id="error_lbl" styleClass="error_lbl" text="Error" />
         </children>
      </VBox>
   </children>
</AnchorPane>
	